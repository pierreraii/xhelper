{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["es5", "dom", "es2015.core"]
  },
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "files": [
    "./lib/index.ts",
    "./lib/util/date.ts",
    "./lib/util/general.ts",
    "./lib/util/system.ts"
  ]
}